#!/usr/bin/env bash
set -e

_DIR=`pwd`

init() {
if [ ! -e "$_DIR/$1/node_modules" ]; then
cd $_DIR/$1
yarn config set registry https://registry.npm.taobao.org
npx yarn
fi
}
init spider
init lib
init .

PATH="$_DIR/.direnv/bin:$PATH"

alias coffee=$(npx which coffee)

if [ ! -e "./data" ]; then
git clone git@github.com:txtcn/data.git --depth=1
fi
